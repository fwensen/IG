<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/main_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="火车票查询"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_click" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:singleLine="true"
            android:text="出发地"
            android:textSize="23sp" />

        <AutoCompleteTextView
            android:id="@+id/train_startplace_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:autoText="true"
            android:background="@drawable/search_bar_edit_normal"
            android:hint="请输入出发地"
            android:imeActionId="1"
            android:paddingLeft="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="23sp" >

            <requestFocus />
        </AutoCompleteTextView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:orientation="vertical" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_click" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:singleLine="true"
            android:text="目的地"
            android:textSize="23sp" />

        <AutoCompleteTextView
            android:id="@+id/train_destplace_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:autoText="true"
            android:background="@drawable/search_bar_edit_normal"
            android:hint="请输入目的地"
            android:imeActionId="1"
            android:paddingLeft="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="23sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:orientation="vertical" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_click" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:singleLine="true"
            android:text="日期"
            android:textSize="23sp" />

        <LinearLayout
           
           android:id="@+id/train_selectdatebtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/train_datetextview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:hint="选择时间"
                android:paddingLeft="5dp"
                android:textColor="#00688B"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
            	 
                android:layout_width="14dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/table_arrow"
                android:gravity="center|center_vertical"
                android:textColor="#262626"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:orientation="vertical" >
    </View>

    <Button
        android:id="@+id/train_changebtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchbtn"
        android:text="交换地址"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/train_search_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchbtn"
        android:text="立即查询"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>