<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/main_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="火车票查询"
            android:textColor="#000000"
            android:textSize="25sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_click" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:singleLine="true"
            android:text="出发地"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/train_startplace_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:autoText="true"
            android:background="@drawable/search_bar_edit_normal"
            android:hint="请输入出发地"
            android:imeActionId="1"
            android:paddingLeft="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" >
            <requestFocus />
        </AutoCompleteTextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_click" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:singleLine="true"
            android:text="目的地"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/train_destplace_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:autoText="true"
            android:background="@drawable/search_bar_edit_normal"
            android:hint="请输入目的地"
            android:imeActionId="1"
            android:paddingLeft="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#00000000"
        android:orientation="vertical" >
    </View>

    <!-- 日期 -->
	<LinearLayout
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

       	<TextView
        	android:id="@+id/ticket_train_year_text"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 日  期"
            android:textSize="20sp"
            android:textColor="@color/black" />

       <EditText
       		android:id="@+id/ticket_train_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

           	android:background="@drawable/bg_edittext"
            android:hint="年"
            android:textSize="20sp"
            android:inputType="number"
            android:singleLine="true" />

      <TextView
      		android:id="@+id/ticket_train_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:textColor="@color/black" />

      <EditText
      		android:id="@+id/ticket_train_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_edittext"
            android:hint="月"
            android:textSize="20sp"
            android:inputType="number"
            android:singleLine="true" />

     <TextView
            android:id="@+id/ticket_train_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:textColor="@color/black" />

     <EditText
            android:id="@+id/ticket_train_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_edittext"
            android:hint="日"
            android:textSize="20sp"
            android:inputType="number"
            android:singleLine="true" />
    </LinearLayout>

	<View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#00000000"
        android:orientation="vertical" >
    </View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ee000000"
        android:orientation="vertical" >
    </View>

	<View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#00000000"
        android:orientation="vertical" >
    </View>
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
    <Button
        android:id="@+id/train_search_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
       android:background="@color/main_bg"
        android:text="立即查询"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>